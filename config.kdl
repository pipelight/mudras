// Common applications
Super+Space{
  @press {
    - "yofi";
  }
}
Super+q {
  @press {
    - r#"niri msg action "close-window""#
  }
}
Super+Enter {
  @press {
    - "kitty -e fish"
    - r#"notify-send -a mudras "new term""#
  }
}

// Test
Super+T {
  @press {
    - "kitty -e fish"
    - r#"notify-send -a mudras "testing command""#
  }
}

// Resize windows
Super+Shift_L+m {
  @press {
    - r#"notify-send -a mudras "resize window""#
    - r#"niri msg action "switch-preset-window-width-back""#
  }
}
Super+Shift_L+n {
  @press {
    - r#"notify-send -a mudras "resize window""#
    - r#"niri msg action "switch-preset-window-height""#
  }
}
Super+Shift_L+e {
  @press {
    - r#"notify-send -a mudras "resize window""#
    - r#"niri msg action "switch-preset-window-height-back""#
  }
}
Super+Shift_L+i {
  @press {
    - r#"notify-send -a mudras "resize window""#
    - r#"niri msg action "switch-preset-window-width""#
  }
}

