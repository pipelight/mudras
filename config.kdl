// Common applications
Super+Space {
  @press {
    - "yofi";
  }
}
Super+Enter {
  @press {
    // - "kitty -e fish"
    - r#"notify-send "new term""#
  }
}

// Test
Super+T {
  @press {
    - r#"notify-send "new term""#
  }
}


// Submap
Super {
  @release {
    // enter a submap
    @enter "window_manager"
  }
}


// Submap definition
@submap name="window_manager" {
  Ctrl+m {
    @press {
      - "niri msg move-column-left"
    }
  }
  Ctrl+i {
    @press {
      - "niri msg move-column-right"
    }
  }

  // Exit the submap
  Super { 
    @press {
      @exit; 
    }
  }
  Escape { 
    @press {
      @exit; 
    }
  }
}

// Common utils
XF86MonBrightnessUp {
  @press repeat=true { 
    - "light -A 10"; 
  }
}
XF86MonBrightnessDown {
  @press repeat=true { 
    - "light -U 10"; 
  }
}
